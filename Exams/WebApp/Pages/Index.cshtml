@page
@model IndexModel
@{
    ViewData["Title"] = "Main page";
}
<div class="row">
    <div class="col-md-4">
        <div class="alert alert-warning"><h2>Список мебели</h2></div>
        <p><a href="/Create">Добавить предмет мебели</a></p>
        <table class="table">
            <tbody>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Название
                    </th>
                    <th>
                        Колличество
                    </th>
                </tr>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Quantity</td>
                        <td>
                            <form method="post">
                                <a asp-page="Edit" asp-route-id="@item.Id">Изменить</a>
                                <button type="submit" asp-page-handler="delete" asp-route-id="@item.Id">
                                    Удалить
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


    <div class="col-md-6">
        <div class="alert alert-info"><h2>Список сортов пива</h2></div>
        <p><a href="/Create">Добавить сорт пива</a></p>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <th>Название</th>
                    <th>Цена за литр</th>
                    <th>Колличество литров</th>
                </tr>
                @foreach (var item in Model.Variables)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td>@item.Quantity</td>
                        <td>
                            <form method="post">
                                <a asp-page="Edit" asp-route-id="@item.Id">Изменить</a>
                                <button type="submit" asp-page-handler="delete" asp-route-id="@item.Id">
                                    Удалить
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
